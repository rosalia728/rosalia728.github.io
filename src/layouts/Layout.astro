---
import "@fontsource-variable/onest";
import "@fontsource/tangerine/400.css";
import "@fontsource/tangerine/700.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body>
    <main>
      <div
        class="w-[90%] container m-auto flex flex-wrap lg:w-[80%] xl:w-[70] 2xl:w-[60%]"
      >
        <div class="h-full p-4 w-full">
          <a href="/">
            <div
              class="bg-[url('/header.JPG')] bg-[center_top_-9vw] bg-cover rounded relative min-h-[80px] flex items-center"
            >
              <h1
                class="select-none text-6xl font-['tangerine'] font-bold text-center m-auto p-4 lg:text-8xl lg:text-left"
              >
                Dark Rebellion
              </h1>
            </div>
          </a>
        </div>

        <slot />
      </div>
    </main>
  </body>
</html>

<style is:global>
  html {
    font-family: Arial, Helvetica, sans-serif;
  }

  body {
    background: linear-gradient(
        to bottom,
        #323232 0%,
        #3f3f3f 40%,
        #1c1c1c 150%
      ),
      linear-gradient(
        to top,
        rgba(255, 255, 255, 0.4) 0%,
        rgba(0, 0, 0, 0.25) 200%
      );
    background-blend-mode: multiply;
    background-attachment: fixed;

    min-height: 100vh;
  }
</style>
