---
import LOOKBOOK from "../../data/lookbook.json";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  return [
    { params: { id: 1 } },
    { params: { id: 2 } },
    { params: { id: 3 } },
    { params: { id: 4 } },
    { params: { id: 5 } },
  ];
}

const { id } = Astro.params;

const data = LOOKBOOK[id - 1];
---

<Layout title="Dark Rebellion">
  <div class="w-full h-full pl-4 pt-4 pb-4 pr-2 lg:w-[12%] relative rounded">
    {
      data.imgs.map((img, index) => (
        <img id={index + ""} src={img} alt={data.title} class="rounded mb-3 " />
      ))
    }
  </div>
  <div class="w-full h-full pl-2 pt-4 pb-4 pr-4 lg:w-[43%] relative">
    <img
      id="main"
      src={data.imgs[0]}
      alt={data.title}
      class="rounded relative"
    />
  </div>
  <div class="w-full h-full pl-2 pt-4 pb-4 pr-4 lg:w-[45%] relative text-white">
    {
      data.items.map((item, index) => (
        <>
          <h3>{item.ref} </h3>
          <p>{item.description}</p>
          <br />
        </>
      ))
    }
  </div>
</Layout>
