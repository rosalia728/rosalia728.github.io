          style={`background-image: linear-gradient(to bottom,transparent,rgba(0,0,0,0),rgba(0,0,0,0),rgba(0,0,0,0.7)),url('')`}
          class="bg-cover bg-center aspect-[3/4] rounded pt-10 relative hover:opacity-80 flex flex-col justify-end"
        >
          <Image src={imports[lookbook.imgs[0]]} alt="" />
          <h1 class="leading-none text-[15vw] text-center select-none mb-5 text-[#DDDCDB] lg:text-[4vw] xl:text-[3vw]">
            {lookbook.title}
