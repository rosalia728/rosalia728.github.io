---
import Layout from "@/layouts/Layout.astro";
import Card from "@/components/Card.astro";
---

<Layout title="Dark Rebellion">
  <main>
    <div class="container px-40 mx-auto flex flex-wrap">
      <div class="h-full p-4 lg:w-full">
        <div
          class="bg-[url('/img/header.JPG')] bg-[center_top_-4rem] bg-cover rounded pl-10 py-12 relative"
        >
          <h1 class="text-9xl font-['tangerine'] font-bold text-left">
            Dark Rebellion
          </h1>
        </div>
      </div>

      <div class="h-full p-4 lg:w-1/2">
        <div
          class="bg-[linear-gradient(to_top,transparent,rgba(0,0,0,0),rgba(0,0,0,0),rgba(0,0,0,0.7)),url('/img/portada-lookbook.JPG')] bg-cover bg-center aspect-[3/4] rounded pt-10 relative hover:opacity-80"
        >
          <h1 class="text-8xl text-center select-none m-auto text-[#DDDCDB]">
            Lookbook
          </h1>
        </div>
      </div>
      <div class="h-full p-4 lg:w-1/2">
        <div
          class="bg-[linear-gradient(to_top,transparent,rgba(0,0,0,0),rgba(0,0,0,0),rgba(0,0,0,0.7)),url('/img/portada-catalogo.JPG')] bg-cover bg-center aspect-[3/4] rounded pt-16 relative hover:opacity-80"
        >
          <h1
            class="text-8xl text-center select-none drop-shadow-lg m-auto text-[#DDDCDB]"
          >
            Cat√°logo
          </h1>
        </div>
      </div>
    </div>
  </main>
</Layout>
