---
import Layout from "@/layouts/Layout.astro";
import Card from "@/components/Card.astro";
---

<Layout title="Dark Rebellion">
  <main>
    <div
      class="w-[90%] container m-auto flex flex-wrap lg:w-[80%] xl:w-[70] 2xl:w-[60%]"
    >
      <div class="h-full p-4 w-full">
        <div
          class="bg-[url('/img/header.JPG')] bg-[center_top_-9vw] bg-cover rounded relative min-h-[80px] flex items-center"
        >
          <h1
            class="text-6xl font-['tangerine'] font-bold text-center m-auto p-4 lg:text-8xl lg:text-left"
          >
            Dark Rebellion
          </h1>
        </div>
      </div>

      <div class="w-full h-full p-4 lg:w-1/2">
        <div
          class="bg-[linear-gradient(to_top,transparent,rgba(0,0,0,0),rgba(0,0,0,0),rgba(0,0,0,0.7)),url('/img/portada-lookbook.JPG')] bg-cover bg-center aspect-[3/4] rounded pt-10 lg:pt-8 relative hover:opacity-80"
        >
          <h1
            class="leading-none text-[15vw] text-center select-none m-auto text-[#DDDCDB] lg:text-[7vw] xl:text-[6vw]"
          >
            Lookbook
          </h1>
        </div>
      </div>
      <div class="w-full h-full p-4 lg:w-1/2">
        <div
          class="bg-[linear-gradient(to_top,transparent,rgba(0,0,0,0),rgba(0,0,0,0),rgba(0,0,0,0.7)),url('/img/portada-catalogo.JPG')] bg-cover bg-center aspect-[3/4] rounded pt-10 relative hover:opacity-80"
        >
          <h1
            class="leading-none text-[15vw] text-center select-none m-auto text-[#DDDCDB] lg:text-[7vw] xl:text-[6vw]"
          >
            Cat√°logo
          </h1>
        </div>
      </div>
    </div>
  </main>
</Layout>
