---
import type { ImageMetadata } from "astro";
import { Image, getImage } from "astro:assets";
import "photoswipe/style.css";

var imagesGet = import.meta.glob<{ default: ImageMetadata }>(
  "../assets/catalogo/*.{jpeg,jpg,png,gif}"
);
const images = [];
for (const ruta in imagesGet) {
  const image = await imagesGet[ruta]();
  images.push(image.default);
}
---

<div class="h-full p-4 lg:columns-2 2xl:columns-3">
  <div class="pswp-gallery" id="my-gallery">
    {
      images.map((image) => (
        <>
          <a
            href={image.src}
            data-pswp-width={image.width}
            data-pswp-height={image.height}
            target="_blank"
            class=""
          >
            <Image
              class="object-contain h-full rounded"
              src={image}
              widths={[240, 540, 720, 1080]}
              sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, 1080px`}
              alt="Fotografia del catÃ¡logo"
              loading="lazy"
              decoding="async"
              quality={80}
              class="hover:scale-105 rounded mb-5 duration-100"
            />
          </a>
        </>
      ))
    }
  </div>
</div>
<script type="module">
  import PhotoSwipeLightbox from "https://unpkg.com/photoswipe/dist/photoswipe-lightbox.esm.js";

  const lightbox = new PhotoSwipeLightbox({
    gallery: "#my-gallery",
    children: "a",
    pswpModule: () => import("https://unpkg.com/photoswipe"),
  });

  lightbox.init();
</script>
